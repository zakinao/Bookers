<%= render "shared/flash" %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan=3 ></th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book|%>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book), class: "edit" %></td>
      <td><%= link_to "Edit", edit_book_path(book), class: "edit" %></td>
     <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"}, class: "edit" %></td>
    </tr>
  <% end  %>
  </tbody>
</table>

<h2>New book</h2>

  <%= form_with model: @book, local: true do |f| %>
    <%= render "shared/error_messages" %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit "Create Book" %>
    </div>

  <% end  %>
