<h1>Editing Book</h1>
<div>
  <%= form_with model: @book, local: true do |f| %>
    <%= render "shared/error_messages" %>
    <div class="field">
      <%= f.label :title  %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit "Update Book" %>
    </div>

  <% end  %>
</div>
<div>
  <%= link_to "Show", book_path(@book), class: "edit" %>
  |
  <%= link_to "Back", books_path, class: "edit" %>
</div>